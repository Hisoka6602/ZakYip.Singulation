<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/nlog-internal.log">

  <!-- 变量定义 -->
  <variable name="logDirectory" value="logs" />
  <variable name="archiveAboveSizeMB" value="50" />
  
  <!-- 定义输出目标 -->
  <targets>
    <!-- 文件日志 - 所有级别（传统格式） -->
    <target xsi:type="File" name="allfile" 
            fileName="${logDirectory}/all-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            archiveAboveSize="${archiveAboveSizeMB}000000"
            enableArchiveFileCompression="true" />
    
    <!-- 结构化日志 - JSON格式（用于日志聚合） -->
    <target xsi:type="File" name="jsonfile"
            fileName="${logDirectory}/structured-${shortdate}.json"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            archiveAboveSize="${archiveAboveSizeMB}000000"
            enableArchiveFileCompression="true">
      <layout xsi:type="JsonLayout" includeEventProperties="true" maxRecursionLimit="2">
        <attribute name="timestamp" layout="${longdate}" />
        <attribute name="level" layout="${level:uppercase=true}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=ToString,StackTrace:maxInnerExceptionLevel=5:innerFormat=ToString,StackTrace}" encode="false" />
        <attribute name="machineName" layout="${machinename}" />
        <attribute name="processId" layout="${processid}" />
        <attribute name="threadId" layout="${threadid}" />
        <attribute name="eventProperties" encode="false">
          <layout xsi:type="JsonLayout" includeEventProperties="true" maxRecursionLimit="1" />
        </attribute>
      </layout>
    </target>

    <!-- 文件日志 - 错误级别（传统格式） -->
    <target xsi:type="File" name="errorfile"
            fileName="${logDirectory}/error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            archiveAboveSize="${archiveAboveSizeMB}000000"
            enableArchiveFileCompression="true" />

    <!-- UDP 服务发现日志（非异常，采样策略） -->
    <target xsi:type="File" name="udpfile"
            fileName="${logDirectory}/udp-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- TransportEventPump 日志（非异常，采样策略） -->
    <target xsi:type="File" name="transporteventpumpfile"
            fileName="${logDirectory}/transport-event-pump-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- IoStatusWorker 日志（采样策略） -->
    <target xsi:type="File" name="iostatusworkerfile"
            fileName="${logDirectory}/io-status-worker-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="7" />

    <!-- 控制台输出 -->
    <target xsi:type="Console" name="console"
            layout="${date:format=HH\:mm\:ss}|${level:uppercase=true:padding=-5}|${logger:shortName=true}|${message} ${exception:format=message}" />

    <!-- 彩色控制台输出 -->
    <target xsi:type="ColoredConsole" name="coloredConsole"
            layout="${date:format=HH\:mm\:ss}|${level:uppercase=true:padding=-5}|${logger:shortName=true}|${message} ${exception:format=message}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
    
    <!-- 日志采样包装器 - 用于高频日志（UDP, Transport, IoStatus） -->
    <!-- 采样率：每秒最多记录10条相同类别的日志 -->
    <target xsi:type="LimitingWrapper" name="udpsampled" messageLimitSize="10" timeLimit="00:00:01">
      <target-ref name="udpfile" />
    </target>
    
    <target xsi:type="LimitingWrapper" name="transportsampled" messageLimitSize="10" timeLimit="00:00:01">
      <target-ref name="transporteventpumpfile" />
    </target>
    
    <target xsi:type="LimitingWrapper" name="iostatussampled" messageLimitSize="10" timeLimit="00:00:01">
      <target-ref name="iostatusworkerfile" />
    </target>
  </targets>

  <!-- 日志路由规则 -->
  <rules>
    <!-- UDP 服务发现日志（应用采样策略，非异常写入专用文件） -->
    <logger name="ZakYip.Singulation.Infrastructure.Services.UdpDiscoveryService" minlevel="Trace" maxlevel="Warn" writeTo="udpsampled" final="true" />
    <logger name="ZakYip.Singulation.Infrastructure.Services.UdpDiscoveryService" minlevel="Error" writeTo="errorfile,allfile,jsonfile" final="true" />
    
    <!-- TransportEventPump 日志（应用采样策略，非异常写入专用文件） -->
    <logger name="ZakYip.Singulation.Infrastructure.Workers.TransportEventPump" minlevel="Trace" maxlevel="Warn" writeTo="transportsampled" final="true" />
    <logger name="ZakYip.Singulation.Infrastructure.Workers.TransportEventPump" minlevel="Error" writeTo="errorfile,allfile,jsonfile" final="true" />
    
    <!-- IoStatusWorker 日志（应用采样策略） -->
    <logger name="ZakYip.Singulation.Infrastructure.Workers.IoStatusWorker" minlevel="Trace" maxlevel="Warn" writeTo="iostatussampled" final="true" />
    <logger name="ZakYip.Singulation.Infrastructure.Workers.IoStatusWorker" minlevel="Error" writeTo="errorfile,allfile,jsonfile" final="true" />
    
    <!-- 所有日志写入传统格式文件和结构化JSON文件 -->
    <logger name="*" minlevel="Trace" writeTo="allfile,jsonfile" />
    
    <!-- 错误日志单独记录 -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />
    
    <!-- 控制台输出（生产环境可调整为 Info 或 Warn） -->
    <logger name="*" minlevel="Debug" writeTo="coloredConsole" />
    
    <!-- Microsoft 框架日志过滤 -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>
