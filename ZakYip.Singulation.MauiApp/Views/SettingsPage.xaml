<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ZakYip.Singulation.MauiApp.ViewModels"
             xmlns:services="clr-namespace:ZakYip.Singulation.MauiApp.Services"
             x:Class="ZakYip.Singulation.MauiApp.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="设置">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">

            <!-- 标题 -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label
                    Text="⚙"
                    FontSize="32"
                    TextColor="#666"
                    VerticalOptions="Center" />
                <Label
                    Text="应用设置"
                    Style="{StaticResource Headline}"
                    VerticalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1" />
            </HorizontalStackLayout>

            <!-- UDP 服务发现 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="◉"
                            FontSize="22"
                            TextColor="#2196F3"
                            VerticalOptions="Center" />
                        <Label
                            Text="自动发现服务"
                            FontAttributes="Bold"
                            FontSize="18"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Label
                        Text="通过 UDP 广播自动发现网络中的 Singulation 服务"
                        FontSize="12"
                        TextColor="Gray" />

                    <Button
                        Text="{Binding IsDiscovering, Converter={StaticResource BoolToTextConverter}, ConverterParameter='停止发现:开始发现'}"
                        Command="{Binding ToggleDiscoveryCommand}"
                        BackgroundColor="{Binding IsDiscovering, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Red:Blue'}"
                        HorizontalOptions="Fill" />

                    <!-- 发现的服务列表 -->
                    <CollectionView
                        ItemsSource="{Binding DiscoveredServices}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedService}"
                        HeightRequest="200"
                        Margin="0,10,0,0">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="10" Margin="10">
                                <Label
                                    Text="○"
                                    FontSize="48"
                                    TextColor="LightGray"
                                    HorizontalOptions="Center" />
                                <Label
                                    Text="没有发现任何服务"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="16"
                                    FontAttributes="Bold" />
                                <Label
                                    Text="请确保："
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="14" />
                                <Label
                                    Text="1. 设备连接到同一网络"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="12" />
                                <Label
                                    Text="2. 主服务已启动"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="12" />
                                <Label
                                    Text="3. 防火墙允许 UDP 端口 18888"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="12" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="services:DiscoveredService">
                                <Frame
                                    Padding="10"
                                    Margin="0,5"
                                    BorderColor="LightBlue"
                                    BackgroundColor="White">
                                    <Grid RowDefinitions="Auto,Auto">
                                        <Label
                                            Grid.Row="0"
                                            Text="{Binding DisplayName}"
                                            FontAttributes="Bold"
                                            FontSize="16" />
                                        <Label
                                            Grid.Row="1"
                                            Text="{Binding DisplayInfo}"
                                            FontSize="12"
                                            TextColor="Gray" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SettingsViewModel}}, Path=ConnectToServiceCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- API 配置 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="◆"
                            FontSize="22"
                            TextColor="#4CAF50"
                            VerticalOptions="Center" />
                        <Label
                            Text="API 配置"
                            FontAttributes="Bold"
                            FontSize="18"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Label Text="API 基础地址" FontSize="14" />
                    <Entry
                        Text="{Binding ApiBaseUrl}"
                        Placeholder="http://localhost:5005"
                        Keyboard="Url" />

                    <Label Text="连接超时 (秒)" FontSize="14" />
                    <Entry
                        Text="{Binding TimeoutSeconds}"
                        Placeholder="30"
                        Keyboard="Numeric" />

                    <Button
                        Command="{Binding SaveSettingsCommand}"
                        BackgroundColor="Green"
                        HorizontalOptions="Fill"
                        Margin="0,10,0,0">
                        <Button.Content>
                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Label Text="✓" FontSize="20" TextColor="White" VerticalOptions="Center" />
                                <Label Text="保存设置" FontSize="16" TextColor="White" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Button.Content>
                    </Button>

                    <Label
                        Text="{Binding StatusMessage}"
                        FontSize="12"
                        HorizontalTextAlignment="Center"
                        Margin="0,5,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- 应用信息 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="5">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="i"
                            FontSize="22"
                            TextColor="#666"
                            VerticalOptions="Center" />
                        <Label
                            Text="应用信息"
                            FontAttributes="Bold"
                            FontSize="18"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5" Margin="0,5,0,0">
                        <Label Text="▪" FontSize="14" TextColor="#666" />
                        <Label Text="版本: 1.0.0" FontSize="14" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="▪" FontSize="14" TextColor="#666" />
                        <Label Text="平台: .NET MAUI 8.0" FontSize="14" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="▪" FontSize="14" TextColor="#666" />
                        <Label Text="项目: ZakYip.Singulation" FontSize="14" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
