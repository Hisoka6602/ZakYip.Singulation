<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ZakYip.Singulation.MauiApp.ViewModels"
             x:Class="ZakYip.Singulation.MauiApp.Views.ControllerDetailsPage"
             x:DataType="vm:ControllerDetailsViewModel"
             Title="控制器详情">
    
    <ScrollView>
        <!-- Responsive layout that adapts to orientation -->
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
        <VerticalStackLayout 
            Grid.Column="0"
            Spacing="15"
            HorizontalOptions="Center"
            MaximumWidthRequest="800">
            
            <!-- 页面标题 -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,0,0,20">
                <Label Text="{Binding ControllerGlyph}"
                       FontFamily="FontAwesomeSolid"
                       FontSize="24"
                       TextColor="#2196F3"
                       VerticalOptions="Center" />
                <Label Text="控制器详细信息"
                       FontSize="24"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
            
            <!-- 加载指示器 -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="{StaticResource Primary}"
                              HeightRequest="50"/>
            
            <!-- 基本信息卡片 -->
            <Frame BackgroundColor="LightBlue"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding InfoGlyph}"
                               FontFamily="FontAwesomeSolid"
                               FontSize="18"
                               TextColor="#2196F3"
                               VerticalOptions="Center" />
                        <Label Text="基本信息"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="轴 ID:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding AxisInfo.AxisId}"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="名称:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding AxisInfo.Name}"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="状态:" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding AxisInfo.StatusText}"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="使能状态:" FontAttributes="Bold"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding EnabledText}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- 速度信息卡片 -->
            <Frame BackgroundColor="LightGreen"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding SpeedGlyph}"
                               FontFamily="FontAwesomeSolid"
                               FontSize="18"
                               TextColor="#4CAF50"
                               VerticalOptions="Center" />
                        <Label Text="速度信息"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="目标速度:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding TargetSpeedText}"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="反馈速度:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding FeedbackSpeedText}"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="实时速度:" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding CurrentSpeedText}" FontAttributes="Bold" TextColor="Green"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- 错误信息卡片 -->
            <Frame BackgroundColor="LightCoral"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="True"
                   IsVisible="{Binding HasError}">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding ErrorGlyph}"
                               FontFamily="FontAwesomeSolid"
                               FontSize="18"
                               TextColor="#F44336"
                               VerticalOptions="Center" />
                        <Label Text="错误信息"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="错误码:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding AxisInfo.LastErrorCode}"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="错误消息:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding AxisInfo.LastErrorMessage}" LineBreakMode="WordWrap"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- 操作按钮 -->
            <Frame BackgroundColor="LightYellow"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding SettingsGlyph}"
                               FontFamily="FontAwesomeSolid"
                               FontSize="18"
                               TextColor="#FF9800"
                               VerticalOptions="Center" />
                        <Label Text="操作"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowDefinitions="Auto,Auto" RowSpacing="10">
                        <Button Grid.Row="0" Grid.Column="0"
                                Style="{StaticResource IconButton}"
                                ImageSource="{StaticResource Icon.Success.24}"
                                Text="使能"
                                BackgroundColor="Green"
                                TextColor="White"
                                Command="{Binding EnableCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                HeightRequest="{OnIdiom Phone=44, Tablet=50, Desktop=56}"/>
                        
                        <Button Grid.Row="0" Grid.Column="1"
                                Style="{StaticResource IconButton}"
                                ImageSource="{StaticResource Icon.Error.24}"
                                Text="禁用"
                                BackgroundColor="Red"
                                TextColor="White"
                                Command="{Binding DisableCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                HeightRequest="{OnIdiom Phone=44, Tablet=50, Desktop=56}"/>
                        
                        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                Style="{StaticResource IconButton}"
                                ImageSource="{StaticResource Icon.Refresh.24}"
                                Text="刷新"
                                BackgroundColor="Blue"
                                TextColor="White"
                                Command="{Binding RefreshCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                HeightRequest="{OnIdiom Phone=44, Tablet=50, Desktop=56}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
            
            <!-- 速度设置 -->
            <Frame BackgroundColor="LightCyan"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding SpeedGlyph}"
                               FontFamily="FontAwesomeSolid"
                               FontSize="18"
                               TextColor="#00BCD4"
                               VerticalOptions="Center" />
                        <Label Text="速度设置"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="10">
                        <Entry Text="{Binding NewSpeed}"
                               Placeholder="输入速度 (0-2000 mm/s)"
                               Keyboard="Numeric"
                               HorizontalOptions="FillAndExpand"/>
                        
                        <Button Style="{StaticResource IconButton}"
                                ImageSource="{StaticResource Icon.Speed.24}"
                                Text="设置"
                                BackgroundColor="DarkBlue"
                                TextColor="White"
                                Command="{Binding SetSpeedCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- 状态消息 -->
            <Frame BackgroundColor="LightGray"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="{Binding InfoGlyph}"
                               FontFamily="FontAwesomeSolid"
                               FontSize="16"
                               TextColor="#666"
                               VerticalOptions="Center" />
                        <Label Text="状态消息"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Label Text="{Binding StatusMessage}"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
