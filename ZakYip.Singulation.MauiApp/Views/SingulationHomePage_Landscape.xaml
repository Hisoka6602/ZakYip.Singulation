<?xml version="1.0" encoding="utf-8" ?>
<!--  Landscape Layout Content Template  -->
<Grid
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:ZakYip.Singulation.MauiApp.ViewModels"
    Padding="16"
    ColumnSpacing="16"
    RowSpacing="16"
    BackgroundColor="#F6F7FB">
    
    <Grid.Resources>
        <ResourceDictionary>
            <!--  Theme Colors  -->
            <Color x:Key="PrimaryColor">#3B82F6</Color>
            <Color x:Key="DangerColor">#EF4444</Color>
            <Color x:Key="SuccessColor">#10B981</Color>
            <Color x:Key="DisabledColor">#94A3B8</Color>
            <Color x:Key="TextSecondaryColor">#64748B</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>
            <Color x:Key="TextColor">#0F172A</Color>
            
            <Style x:Key="CardFrame" TargetType="Frame">
                <Setter Value="{StaticResource CardBackground}" Property="BackgroundColor" />
                <Setter Value="24" Property="CornerRadius" />
                <Setter Value="16" Property="Padding" />
                <Setter Value="False" Property="HasShadow" />
                <Setter Value="Transparent" Property="BorderColor" />
                <Setter Property="Shadow">
                    <Shadow
                        Brush="Black"
                        Opacity="0.06"
                        Radius="12"
                        Offset="0,2" />
                </Setter>
            </Style>
        </ResourceDictionary>
    </Grid.Resources>
    
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <!--  Header  -->
        <RowDefinition Height="*" />
        <!--  Main Content  -->
        <RowDefinition Height="Auto" />
        <!--  Bottom Button  -->
    </Grid.RowDefinitions>

    <!--  Header  -->
    <Frame Grid.Row="0" Style="{StaticResource CardFrame}">
        <Grid ColumnDefinitions="*,Auto,Auto">
            <Label
                Grid.Column="0"
                FontAttributes="Bold"
                FontSize="28"
                Text="分件助手"
                TextColor="{StaticResource TextColor}"
                VerticalOptions="Center" />
            <Button
                Grid.Column="1"
                BackgroundColor="#F6F7FB"
                CornerRadius="22"
                FontFamily="FontAwesomeSolid"
                FontSize="20"
                HeightRequest="44"
                Text="&#xF002;"
                TextColor="{StaticResource TextColor}"
                WidthRequest="44" />
            <Button
                Grid.Column="2"
                Margin="8,0,0,0"
                BackgroundColor="#F6F7FB"
                CornerRadius="22"
                FontFamily="FontAwesomeSolid"
                FontSize="20"
                HeightRequest="44"
                Text="&#xF013;"
                TextColor="{StaticResource TextColor}"
                WidthRequest="44" />
        </Grid>
    </Frame>

    <!--  Main Content Area  -->
    <Grid Grid.Row="1" ColumnSpacing="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520" />
            <!--  Left Control Panel  -->
            <ColumnDefinition Width="*" />
            <!--  Right Info Panel  -->
        </Grid.ColumnDefinitions>

        <!--  Left Control Panel  -->
        <ScrollView Grid.Column="0">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Control Buttons  -->
                <Grid Grid.Row="0" ColumnDefinitions="*,*" ColumnSpacing="8" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Refresh Controller  -->
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="#F1F5F9"
                        BorderColor="#E2E8F0"
                        BorderWidth="1"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        FontSize="15"
                        HeightRequest="60"
                        Text="刷新控制器"
                        TextColor="{StaticResource TextSecondaryColor}" />

                    <!--  Safety Command  -->
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        FontSize="15"
                        HeightRequest="60"
                        Text="安全指令"
                        TextColor="White" />

                    <!--  Enable All  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        BackgroundColor="#D1FAE5"
                        BorderColor="{StaticResource SuccessColor}"
                        BorderWidth="1"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        FontSize="15"
                        HeightRequest="60"
                        Text="全部使能"
                        TextColor="{StaticResource SuccessColor}" />

                    <!--  Disable All  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="#F1F5F9"
                        BorderColor="{StaticResource DisabledColor}"
                        BorderWidth="1"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        FontSize="15"
                        HeightRequest="60"
                        Text="全部禁用"
                        TextColor="{StaticResource DisabledColor}" />

                    <!--  Axis Speed Setting  -->
                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        FontSize="15"
                        HeightRequest="60"
                        Text="轴速度设置"
                        TextColor="White" />
                </Grid>
            </Grid>
        </ScrollView>

        <!--  Right Info Panel  -->
        <ScrollView Grid.Column="1">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!--  Batch Info  -->
                    <RowDefinition Height="Auto" />
                    <!--  Mode Selector  -->
                    <RowDefinition Height="*" />
                    <!--  Motor Grid  -->
                </Grid.RowDefinitions>

                <!--  Batch Information  -->
                <Frame
                    Grid.Row="0"
                    Padding="12"
                    BackgroundColor="#F1F5F9"
                    BorderColor="Transparent"
                    CornerRadius="12"
                    HasShadow="False">
                    <Label
                        FontSize="14"
                        Text="批次：DJ61957AAK00025"
                        TextColor="{StaticResource TextSecondaryColor}" />
                </Frame>

                <!--  Mode Switcher  -->
                <Frame
                    Grid.Row="1"
                    Padding="4"
                    Style="{StaticResource CardFrame}">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
                        <Button
                            Grid.Column="0"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            CornerRadius="20"
                            FontAttributes="Bold"
                            FontSize="15"
                            HeightRequest="44"
                            Text="自动分离"
                            TextColor="White" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            CornerRadius="20"
                            FontAttributes="Bold"
                            FontSize="15"
                            HeightRequest="44"
                            Text="手动分离"
                            TextColor="{StaticResource TextSecondaryColor}" />
                    </Grid>
                </Frame>

                <!--  Motor Axis Grid (5 columns × 4 rows, M01-M20) - Placeholder  -->
                <Frame Grid.Row="2" Style="{StaticResource CardFrame}">
                    <Label Text="Motor Grid (5 columns)" TextColor="{StaticResource TextColor}" />
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>

    <!--  Main Action Button (Bottom Center)  -->
    <Button
        Grid.Row="2"
        Margin="0,8,0,0"
        BackgroundColor="{StaticResource PrimaryColor}"
        CornerRadius="30"
        FontAttributes="Bold"
        FontSize="20"
        HeightRequest="60"
        HorizontalOptions="Center"
        Text="分离"
        TextColor="White"
        WidthRequest="300">
        <Button.Shadow>
            <Shadow
                Brush="{StaticResource PrimaryColor}"
                Opacity="0.3"
                Radius="16"
                Offset="0,4" />
        </Button.Shadow>
    </Button>
</Grid>
