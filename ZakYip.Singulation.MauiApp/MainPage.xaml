<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ZakYip.Singulation.MauiApp.ViewModels"
             xmlns:services="clr-namespace:ZakYip.Singulation.MauiApp.Services"
             xmlns:controls="clr-namespace:ZakYip.Singulation.MauiApp.Controls"
             x:Class="ZakYip.Singulation.MauiApp.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="主控制台">

    <Grid>
        <!-- Main content -->
        <RefreshView
            IsRefreshing="{Binding IsLoading}"
            Command="{Binding RefreshControllersCommand}"
            RefreshColor="#2196F3">
        <ScrollView>
        <!-- Responsive layout that adapts to orientation -->
        <Grid Padding="20">
            <Grid.ColumnDefinitions>
                <!-- Single column takes full width -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
        <VerticalStackLayout
            Grid.Column="0"
            Spacing="15"
            HorizontalOptions="Center"
            MaximumWidthRequest="800">

            <!-- 标题 -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label
                    Text="{Binding HomeGlyph}"
                    FontFamily="FontAwesomeSolid"
                    FontSize="32"
                    TextColor="#2196F3"
                    VerticalOptions="Center" />
                <Label
                    Text="Singulation 控制台"
                    Style="{StaticResource Headline}"
                    VerticalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1" />
            </HorizontalStackLayout>

            <!-- 状态信息 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F0F8FF">
                <Label
                    Text="{Binding StatusMessage}"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    TextColor="#333" />
            </Frame>

            <!-- 加载指示器 -->
            <ActivityIndicator 
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="Blue"
                HeightRequest="40" />

            <!-- 控制器管理区域 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="{Binding ControllerGlyph}"
                            FontFamily="FontAwesomeSolid"
                            FontSize="24"
                            TextColor="#666"
                            VerticalOptions="Center" />
                        <Label
                            Text="控制器管理"
                            FontAttributes="Bold"
                            FontSize="20"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Button
                        Command="{Binding RefreshControllersCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                        Style="{StaticResource IconButton}"
                        ImageSource="{StaticResource Icon.Refresh.24}"
                        Text="刷新控制器"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        HorizontalOptions="Fill"
                        FontSize="16"
                        Padding="15,10" />

                    <CollectionView 
                        ItemsSource="{Binding Controllers}"
                        SelectionMode="None"
                        MinimumHeightRequest="200"
                        HeightRequest="{OnIdiom Phone=250, Tablet=350, Desktop=400}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="10" Margin="20">
                                <Label
                                    Text="{Binding ControllerGlyph}"
                                    FontFamily="FontAwesomeSolid"
                                    FontSize="48"
                                    TextColor="LightGray"
                                    HorizontalOptions="Center" />
                                <Label
                                    Text="暂无控制器数据"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="16" />
                                <Label
                                    Text="点击上方按钮刷新"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="14" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="services:AxisInfo">
                                <Frame Margin="0,5" Padding="15" BorderColor="#2196F3" BackgroundColor="White">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ViewDetailsCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto" RowSpacing="5" ColumnSpacing="10">
                                        <!-- 轴名称 -->
                                        <Image Grid.Row="0" Grid.Column="0" Source="{StaticResource Icon.Axis.24}" WidthRequest="16" HeightRequest="16" />
                                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" />
                                        
                                        <!-- 实时速度显示（突出显示） -->
                                        <Frame Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Padding="10,5" BackgroundColor="#E3F2FD" BorderColor="#2196F3" CornerRadius="5" VerticalOptions="Center">
                                            <VerticalStackLayout Spacing="2">
                                                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                                                    <Image Source="{StaticResource Icon.Speed.24}" WidthRequest="14" HeightRequest="14" />
                                                    <Label Text="速度" FontSize="10" TextColor="#666" />
                                                </HorizontalStackLayout>
                                                <Label Text="{Binding CurrentSpeed, StringFormat='{0:F1} mm/s'}" 
                                                       FontSize="16" 
                                                       FontAttributes="Bold" 
                                                       TextColor="#2196F3" 
                                                       HorizontalOptions="Center" />
                                            </VerticalStackLayout>
                                        </Frame>
                                        
                                        <!-- 轴 ID -->
                                        <Image Grid.Row="1" Grid.Column="0" Source="{StaticResource Icon.Info.24}" WidthRequest="14" HeightRequest="14" />
                                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding AxisId, StringFormat='轴 ID: {0}'}" FontSize="14" />
                                        
                                        <!-- 状态 -->
                                        <Image Grid.Row="2" Grid.Column="0" Source="{StaticResource Icon.Circle}" WidthRequest="14" HeightRequest="14" />
                                        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding StatusText, StringFormat='状态: {0}'}" FontSize="14" />
                                        
                                        <!-- 使能状态 -->
                                        <Image Grid.Row="3" Grid.Column="0" Source="{StaticResource Icon.Success.24}" WidthRequest="14" HeightRequest="14" />
                                        <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Enabled, StringFormat='已使能: {0}'}" FontSize="14" />
                                        
                                        <!-- 提示 -->
                                        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" FontSize="12" TextColor="#2196F3" HorizontalOptions="End">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="👉 " />
                                                    <Span Text="点击查看详情" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- 安全命令区域 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#FFF8E1">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="{Binding SafetyGlyph}"
                            FontFamily="FontAwesomeSolid"
                            FontSize="24"
                            TextColor="#F57C00"
                            VerticalOptions="Center" />
                        <Label
                            Text="安全命令"
                            FontAttributes="Bold"
                            FontSize="20"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Label Text="命令类型" FontSize="14" />
                    <Picker
                        Title="选择命令类型"
                        SelectedItem="{Binding SafetyCommandType}"
                        BackgroundColor="White">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Start</x:String>
                                <x:String>Stop</x:String>
                                <x:String>Reset</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Label Text="命令原因" FontSize="14" />
                    <Entry
                        Placeholder="输入命令原因（可选）"
                        Text="{Binding SafetyReason}"
                        BackgroundColor="White" />

                    <Button
                        Command="{Binding SendSafetyCommandCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                        Style="{StaticResource IconButton}"
                        ImageSource="{StaticResource Icon.Send.24}"
                        Text="发送安全命令"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        HorizontalOptions="Fill"
                        FontSize="16"
                        Padding="15,10" />
                </VerticalStackLayout>
            </Frame>

            <!-- 轴控制区域 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#E8F5E9">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="{Binding SpeedGlyph}"
                            FontFamily="FontAwesomeSolid"
                            FontSize="24"
                            TextColor="#4CAF50"
                            VerticalOptions="Center" />
                        <Label
                            Text="轴控制"
                            FontAttributes="Bold"
                            FontSize="20"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button
                            Grid.Column="0"
                            Command="{Binding EnableAllAxesCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            Style="{StaticResource IconButton}"
                            ImageSource="{StaticResource Icon.Success.24}"
                            Text="全部使能"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="14"
                            Padding="15,10" />

                        <Button
                            Grid.Column="1"
                            Command="{Binding DisableAllAxesCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            Style="{StaticResource IconButton}"
                            ImageSource="{StaticResource Icon.Error.24}"
                            Text="全部禁用"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            FontSize="14"
                            Padding="15,10" />
                    </Grid>

                    <HorizontalStackLayout Spacing="5" Margin="0,10,0,0">
                        <Image Source="{StaticResource Icon.Speed.24}" WidthRequest="14" HeightRequest="14" />
                        <Label Text="目标速度 (mm/s)" FontSize="14" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <Entry
                            Text="{Binding TargetSpeed}"
                            Placeholder="100"
                            Keyboard="Numeric"
                            BackgroundColor="White"
                            HorizontalOptions="FillAndExpand" />
                        <Button
                            Command="{Binding SetAllAxesSpeedCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            Style="{StaticResource IconButton}"
                            ImageSource="{StaticResource Icon.Speed.24}"
                            Text="设置速度"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            FontSize="14"
                            Padding="15,10" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- SignalR连接区域 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F3E5F5">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="{Binding LinkGlyph}"
                            FontFamily="FontAwesomeSolid"
                            FontSize="24"
                            TextColor="#9C27B0"
                            VerticalOptions="Center" />
                        <Label
                            Text="实时连接"
                            FontAttributes="Bold"
                            FontSize="20"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Label
                        Text="通过 SignalR 连接到主服务，接收实时事件推送"
                        FontSize="12"
                        TextColor="Gray" />
                    
                    <!-- 连接状态显示 -->
                    <Frame Padding="10" BackgroundColor="White" BorderColor="LightGray" CornerRadius="5">
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                Text="状态:"
                                FontSize="14"
                                FontAttributes="Bold"
                                VerticalOptions="Center" />
                            <Label
                                Text="{Binding SignalRStatus}"
                                FontSize="14"
                                VerticalOptions="Center" />
                            <Label
                                Text="{Binding SignalRLatencyText}"
                                FontSize="12"
                                TextColor="Gray"
                                VerticalOptions="Center"
                                IsVisible="{Binding SignalRLatencyText, Converter={StaticResource StringToBoolConverter}}" />
                        </HorizontalStackLayout>
                    </Frame>

                    <Button
                        Command="{Binding ConnectSignalRCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                        Style="{StaticResource IconButton}"
                        ImageSource="{StaticResource Icon.Link.24}"
                        Text="连接 SignalR"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        HorizontalOptions="Fill"
                        FontSize="16"
                        Padding="15,10" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
        </Grid>
    </ScrollView>
    </RefreshView>
    
    <!-- Notification overlay -->
    <controls:NotificationOverlay 
        VerticalOptions="Start"
        HorizontalOptions="Fill"
        Margin="0,10,0,0"
        ZIndex="1000" />
    </Grid>

</ContentPage>
