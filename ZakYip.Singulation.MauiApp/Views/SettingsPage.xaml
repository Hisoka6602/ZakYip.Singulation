<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ZakYip.Singulation.MauiApp.ViewModels"
             xmlns:services="clr-namespace:ZakYip.Singulation.MauiApp.Services"
             xmlns:controls="clr-namespace:ZakYip.Singulation.MauiApp.Controls"
             x:Class="ZakYip.Singulation.MauiApp.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="设置">

    <Grid>
        <!-- Main content -->
        <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">

            <!-- 标题 -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label
                    Text="&#xf013;"
                    FontFamily="FontAwesomeSolid"
                    FontSize="32"
                    TextColor="#666"
                    VerticalOptions="Center" />
                <Label
                    Text="应用设置"
                    Style="{StaticResource Headline}"
                    VerticalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1" />
            </HorizontalStackLayout>

            <!-- UDP 服务发现 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="&#xf6ff;"
                            FontFamily="FontAwesomeSolid"
                            FontSize="22"
                            TextColor="#2196F3"
                            VerticalOptions="Center" />
                        <Label
                            Text="自动发现服务"
                            FontAttributes="Bold"
                            FontSize="18"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Label
                        Text="通过 UDP 广播自动发现网络中的 Singulation 服务"
                        FontSize="12"
                        TextColor="Gray" />

                    <Button
                        Text="{Binding IsDiscovering, Converter={StaticResource BoolToTextConverter}, ConverterParameter='停止发现:开始发现'}"
                        Command="{Binding ToggleDiscoveryCommand}"
                        BackgroundColor="{Binding IsDiscovering, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Red:Blue'}"
                        HorizontalOptions="Fill" />

                    <!-- 发现的服务列表 -->
                    <CollectionView
                        ItemsSource="{Binding DiscoveredServices}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedService}"
                        HeightRequest="200"
                        Margin="0,10,0,0">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="10" Margin="10">
                                <Label
                                    Text="&#xf6ff;"
                                    FontFamily="FontAwesomeSolid"
                                    FontSize="48"
                                    TextColor="LightGray"
                                    HorizontalOptions="Center" />
                                <Label
                                    Text="没有发现任何服务"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="16"
                                    FontAttributes="Bold" />
                                <Label
                                    Text="请确保："
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="14" />
                                <Label
                                    Text="1. 设备连接到同一网络"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="12" />
                                <Label
                                    Text="2. 主服务已启动"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="12" />
                                <Label
                                    Text="3. 防火墙允许 UDP 端口 18888"
                                    HorizontalTextAlignment="Center"
                                    TextColor="Gray"
                                    FontSize="12" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="services:DiscoveredService">
                                <Frame
                                    Padding="10"
                                    Margin="0,5"
                                    BorderColor="LightBlue"
                                    BackgroundColor="White">
                                    <Grid RowDefinitions="Auto,Auto">
                                        <Label
                                            Grid.Row="0"
                                            Text="{Binding DisplayName}"
                                            FontAttributes="Bold"
                                            FontSize="16" />
                                        <Label
                                            Grid.Row="1"
                                            Text="{Binding DisplayInfo}"
                                            FontSize="12"
                                            TextColor="Gray" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SettingsViewModel}}, Path=ConnectToServiceCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- API 配置 - Hidden for security (Requirement 3) -->
            <!-- Users should use UDP discovery to automatically find and connect to services -->
            
            <!-- Status Message -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5" IsVisible="{Binding StatusMessage, Converter={StaticResource StringToBoolConverter}}">
                <Label
                    Text="{Binding StatusMessage}"
                    FontSize="14"
                    HorizontalTextAlignment="Center" />
            </Frame>

            <!-- 应用信息 -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="5">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            Text="&#xf05a;"
                            FontFamily="FontAwesomeSolid"
                            FontSize="22"
                            TextColor="#666"
                            VerticalOptions="Center" />
                        <Label
                            Text="应用信息"
                            FontAttributes="Bold"
                            FontSize="18"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5" Margin="0,5,0,0">
                        <Label Text="&#xf058;" FontFamily="FontAwesomeSolid" FontSize="14" TextColor="#4CAF50" />
                        <Label Text="版本: 1.0.0" FontSize="14" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="&#xf058;" FontFamily="FontAwesomeSolid" FontSize="14" TextColor="#4CAF50" />
                        <Label Text="平台: .NET MAUI 8.0" FontSize="14" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="&#xf058;" FontFamily="FontAwesomeSolid" FontSize="14" TextColor="#4CAF50" />
                        <Label Text="项目: ZakYip.Singulation" FontSize="14" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
    <!-- Notification overlay -->
    <controls:NotificationOverlay 
        VerticalOptions="Start"
        HorizontalOptions="Fill"
        Margin="0,10,0,0"
        ZIndex="1000" />
    </Grid>

</ContentPage>
