<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/nlog-internal.log">

  <!-- 定义输出目标 -->
  <targets>
    <!-- 文件日志 - 所有级别 -->
    <target xsi:type="File" name="allfile" 
            fileName="logs/all-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30" />

    <!-- 文件日志 - 错误级别 -->
    <target xsi:type="File" name="errorfile"
            fileName="logs/error-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30" />

    <!-- UDP Discovery 服务日志（非异常） -->
    <target xsi:type="File" name="udpfile"
            fileName="logs/udp-discovery-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30" />

    <!-- TransportEventPump 日志（非异常） -->
    <target xsi:type="File" name="transportpumpfile"
            fileName="logs/transport-event-pump-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30" />

    <!-- IoStatusWorker 日志（包含异常） -->
    <target xsi:type="File" name="iostatusfile"
            fileName="logs/io-status-worker-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            encoding="utf-8"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30" />

    <!-- 控制台输出 -->
    <target xsi:type="Console" name="console"
            layout="${date:format=HH\:mm\:ss}|${level:uppercase=true:padding=-5}|${logger:shortName=true}|${message} ${exception:format=message}" />

    <!-- 彩色控制台输出 -->
    <target xsi:type="ColoredConsole" name="coloredConsole"
            layout="${date:format=HH\:mm\:ss}|${level:uppercase=true:padding=-5}|${logger:shortName=true}|${message} ${exception:format=message}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>

  <!-- 日志路由规则 -->
  <rules>
    <!-- UDP Discovery 服务日志：非异常日志单独记录 -->
    <logger name="ZakYip.Singulation.Host.Services.UdpDiscoveryService" maxlevel="Warn" writeTo="udpfile" final="false" />
    <logger name="ZakYip.Singulation.Host.Services.UdpDiscoveryService" minlevel="Error" writeTo="errorfile" final="false" />
    <logger name="ZakYip.Singulation.Host.Services.UdpDiscoveryService" minlevel="Trace" writeTo="allfile,coloredConsole" final="true" />

    <!-- TransportEventPump 日志：非异常日志单独记录 -->
    <logger name="ZakYip.Singulation.Host.Workers.TransportEventPump" maxlevel="Warn" writeTo="transportpumpfile" final="false" />
    <logger name="ZakYip.Singulation.Host.Workers.TransportEventPump" minlevel="Error" writeTo="errorfile" final="false" />
    <logger name="ZakYip.Singulation.Host.Workers.TransportEventPump" minlevel="Trace" writeTo="allfile,coloredConsole" final="true" />

    <!-- IoStatusWorker 日志：所有日志单独记录（包含异常） -->
    <logger name="ZakYip.Singulation.Host.Workers.IoStatusWorker" minlevel="Trace" writeTo="iostatusfile" final="false" />
    <logger name="ZakYip.Singulation.Host.Workers.IoStatusWorker" minlevel="Trace" writeTo="allfile,coloredConsole" final="true" />

    <!-- 所有日志写入文件 -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    
    <!-- 错误日志单独记录 -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />
    
    <!-- 控制台输出（生产环境可调整为 Info 或 Warn） -->
    <logger name="*" minlevel="Debug" writeTo="coloredConsole" />
    
    <!-- Microsoft 框架日志过滤 -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>
