<?xml version="1.0" encoding="utf-8" ?>
<Nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target xsi:type="File" name="LogFile" fileName="${basedir}/logs/${shortdate}.log"
		        layout="${longdate} ${uppercase:${level}} ${logger} - ${message}${onexception:${newline}${exception:format=tostring}}" />
		<target xsi:type="File" name="SerialPortFile" fileName="${basedir}/logs/serialPortlogs/SerialPort_${shortdate}.log"
		        layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="File" name="TcpFile" fileName="${basedir}/logs/Tcplogs/Tcp_${shortdate}.log"
		        layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="File" name="BackgroundServiceFile" fileName="${basedir}/logs/BackgroundServicelogs/BackgroundService_${shortdate}.log"
		        layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="File" name="MySqlTunerLogFile" fileName="${basedir}/logs/MySqlTunerlogs/MySqlTuner_${shortdate}.log"
		layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="Null" name="blackhole" />
	</targets>

	<rules>
		<logger name="System.Net.Http.*" maxlevel ="Info" writeTo="blackhole" final="true" />
		<logger name="ZakYip.Plugins.Abstractions.Common.SerialPortManager.*" minlevel ="Info" maxlevel ="Warning" writeTo="SerialPortFile" final="true" />
		<logger name="ZakYip.Plugins.Abstractions.Common.TcpManager.*" minlevel ="Info" maxlevel ="Warning" writeTo="TcpFile" final="true" />
		<logger name="ZakYip.Scs.ServiceCluster.BackgroundServices.MySqlTuningHostedService" minlevel ="Info" maxlevel ="Warning" writeTo="MySqlTunerLogFile" final="true" />
		<logger name="ZakYip.Scs.ServiceCluster.BackgroundServices.*" minlevel ="Info" maxlevel ="Warning" writeTo="BackgroundServiceFile" final="true" />
		<logger name="*" minlevel="Warning" writeTo="LogFile" />
	</rules>
</Nlog>