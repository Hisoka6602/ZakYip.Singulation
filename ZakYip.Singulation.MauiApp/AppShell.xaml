<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZakYip.Singulation.MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZakYip.Singulation.MauiApp"
    xmlns:views="clr-namespace:ZakYip.Singulation.MauiApp.Views"
    Title="ZakYip.Singulation.MauiApp">

    <TabBar>
        <ShellContent
            Title="● 控制台"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="⚙ 设置"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
